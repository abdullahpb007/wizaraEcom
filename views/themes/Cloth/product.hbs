{{> themes/Cloth/front-menu}}

<section id="hero" style="background-image: url('https://www.jojo.co.za/wp-content/uploads/2018/08/JOJO-Website-Water-Storage-Solution-1.jpg');">
                            <div class="grid-container">
                    <p class="hero__inner">
                    </p><h1 class="hero__title" style="color:#FFF">750 Litre Slimline <br> Pump Ready Water<br> Storage Tank</h1>
                                                    <h6 class="hero__intro" style="color:#ffffffb8;font-family: 'Montserrat', sans-serif;">The ideal solution for urban environments with limited space and accessibility.</h6></div>
                                            <!-- .hero__inner -->

            </section>
<div class="product-layout col-md-10 col-md-offset-1">
    <div class="row">
        <div class="col-xs-12 col-md-6 pull-left">
          <div class="col-md-10 body_text">
              {{{productDescription}}}
          </div>
          <div style="text-align:left;">
          <a class="btn" href="http://ethesis.nitrkl.ac.in/108/1/10401010.pdf" download>Download Brochure</a>
        </div>
        </div>
        <div class="col-xs-12 col-md-6 pull-right">

            {{#if result.productImage}}
                <div class="title-image-container">
                    <div class="image-prev image-button"> <i class="fa fa-chevron-left" aria-hidden="true"></i></div>
                    <img src="{{result.productImage}}" id="product-title-image" class="product-title-image img-responsive" alt="...">
                    <div class="image-next image-button"> <i class="fa fa-chevron-right" aria-hidden="true"></i></div>
                </div>
            {{else}}
                <div class="title-image-container">
                    <img src="/uploads/placeholder.png" id="product-title-image" class="product-title-image img-responsive" alt="...">
                </div>
            {{/if}}
            {{#ifCond images.length '>' 1}}
                {{#each images}}
                    <div class="vertical-center top-pad-20 col-xs-6 col-lg-6 col-xl-6">
                        <img src="{{this.path}}" class="thumbnail-image img-responsive">
                    </div>
                {{/each}}
            {{/ifCond}}
            <div class="row" style="text-align:center;">
                <h1 class="col-md-12 product-title">{{result.productTitle}}</h1>
                <h4 class="col-md-12 product-price">{{currencySymbol config.currencySymbol}}{{result.productPrice}}</h4>
                {{#if productOptions}}
                    <h4 class="col-md-12 product-option">Options</h4>
                    <div class="col-md-12">
                    {{#each productOptions}}
                        {{#ifCond this.optType '==' "select"}}
                            <strong>{{this.optName}}</strong>
                            <select name="opt-{{this.optName}}" class="form-control product-opt">
                                {{#each this.optOptions}}
                                    <option value="{{this}}">{{this}}</option>
                                {{/each}}
                            </select>
                        {{/ifCond}}
                        {{#ifCond this.optType '==' "radio"}}
                            {{#each this.optOptions}}
                                <strong>{{this.optName}}</strong>
                                <div class="radio">
                                    <label>
                                        <input type="radio" class="product-opt" name="opt-{{../this.optName}}" value="{{this}}">
                                        {{this}}
                                    </label>
                                </div>
                            {{/each}}
                        {{/ifCond}}
                        {{#ifCond this.optType '==' "checkbox"}}
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" class="product-opt" name="opt-{{../this.optName}}" value="{{this.optName}}"><strong>{{this.optName}}</strong>
                                </label>
                            </div>
                        {{/ifCond}}
                    {{/each}}
                    </div>
                {{/if}}
                {{#if config.trackStock}}
                    {{#ifCond result.productStock '==' 0}}
                    <div class="col-md-12">
                        <h4 class="text-danger text-center">
                            Out of stock
                        </h4>
                    </div>
                    {{/ifCond}}
                {{/if}}
                <div class="col-md-12 productOptions">
                    <p class="product-option-text">Quantity</p>
                    <div class="input-group">
                        <span class="input-group-btn">
                            <button class="btn btn-primary qty-btn-minus" type="button">-</button>
                        </span>
                        <input type="text" class="form-control add-color text-center" id="product_quantity" maxlength="3" value="1">
                        <span class="input-group-btn">
                            <button class="btn btn-primary qty-btn-plus" type="button">+</button>
                        </span>
                    </div>
                </div>
                {{#if result.productComment}}
                <div class="col-md-12">
                    Leave a comment?
                    <textarea class="form-control" id="product_comment"></textarea>
                </div>
                {{/if}}
                <div class="col-md-12 btnAddToCart">
                    <button class="btn btn-primary btn-block product-add-to-cart" type="button">Add to cart</button>
                </div>
            </div>
        </div>
    </div>
</div>
<input type="hidden" id="productId" value="{{result._id}}">
